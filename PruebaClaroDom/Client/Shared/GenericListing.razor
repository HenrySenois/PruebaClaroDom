@typeparam Titem

@if (List is null)
{
    if (Loading == null)
    {
<text>Cargando...</text>
<RadzenProgressBar Value="100" ShowValue="false" Mode="ProgressBarMode.Indeterminate" Style="margin-bottom: 20px" />
    }
    else
    {
        @Loading
    }
}
else if (List.Count == 0)
{
    if (ThereNotRecords == null)
    {
<text>No hay registros para mostrar</text>
    }
    else
    {
        @ThereNotRecords
    }
}
else
{
    if (ThereAreRecords != null)
    {
        foreach (var elemento in List)
        {
            @ThereAreRecords(elemento)
        }
    }
    else
    {
        @ThereAreCompleteRecords
    }
}
@code {
    [Parameter] public RenderFragment Loading { get; set; }
    [Parameter] public RenderFragment ThereNotRecords { get; set; }
    [Parameter] public RenderFragment<Titem>
    ThereAreRecords { get; set; }
    [Parameter] public RenderFragment ThereAreCompleteRecords { get; set; }
    [Parameter] public List<Titem>
        List { get; set; }

        }

